<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@drawable/round_layout_no_color">

        <ImageView
            android:id="@+id/image_theme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_default_square" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_play_white"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/txt_fans_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:lines="1"/>
    </FrameLayout>

    <TextView
        android:id="@+id/txt_theme"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="2"
        android:paddingLeft="5dp"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>